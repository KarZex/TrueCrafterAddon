{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.target": {
      "states": {
        "default": {
          "transitions": [
            {
              "target": "query.has_target && !query.is_riding"
            }
          ]
        },
        "target": {
          "transitions": [
            {
              "default": "!query.has_target"
            }
          ],
          "on_entry": [
			"/tag @s add has.target"
          ],
          "on_exit": [
			"/tag @s remove has.target"
          ]
        }
      }
    }
  }
}